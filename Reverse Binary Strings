#include<bits/stdc++.h>
using namespace std;
int main()
{
       int t;
    std::cin >> t;
    while (t--) {
        int n;
        cin >> n;
        string s;
      cin >> s;
        int ans = 0;
        for (int i = 0; i < n; ++i) ans += (s[i] == s[(i + 1) % n]);
        std::cout << ans / 2 << "\n";
    }

    return 0;
}
