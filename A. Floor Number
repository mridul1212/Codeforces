#include<bits/stdc++.h>
using namespace std;
int main()
{
   int t;
   cin>>t;
   while(t--)
   {
 
       int a,b;
       cin>>a>>b;
       if(a==1||a==2)
        cout<<1<<endl;
       else
       {
 
           int c=a-2;
       if(c%b==0)
       {
           cout<<(c/b)+1<<endl;
 
       }
       else
       {
           cout<<(c/b)+1+1<<endl;
       }
       }
 
   }
    return 0;
 
}
