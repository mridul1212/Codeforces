#include <bits/stdc++.h>
using namespace std;
 
int main()
{
 
 
   int a,b,c;
   cin>>a;
 
   if(a==1 || a==2)
   {
       cout<<4<<endl;
       return 0;
   }
 
   if(a%2!=0)
   {
       c=2*((a/2)+2)*((a/2)+1);
       cout<<c<<endl;
   }
   else
   {
       c=((a/2)+1)*((a/2)+1);
       cout<<c<<endl;
   }
 
   return 0;
}
