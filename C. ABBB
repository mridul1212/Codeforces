#include<bits/stdc++.h>
using namespace std;
#define INF 1234567890
#define ll long long

int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        int l=0;
        for(int i=0;i<s.size();i++)
        {
            if(s[i]=='B'&&l>0)
                l--;
                else
                    l++;
        }
        cout<<l<<endl;

    }

	return 0;
}

